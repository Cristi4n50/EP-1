<%- model_class = Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:primapellido) %>:</strong></dt>
  <dd><%= @usuario.primapellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secapellido) %>:</strong></dt>
  <dd><%= @usuario.secapellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clave) %>:</strong></dt>
  <dd><%= @usuario.clave %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @usuario.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_nac) %>:</strong></dt>
  <dd><%= @usuario.fecha_nac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primnombre) %>:</strong></dt>
  <dd><%= @usuario.primnombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secnombre) %>:</strong></dt>
  <dd><%= @usuario.secnombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_cedula) %>:</strong></dt>
  <dd><%= @usuario.num_cedula %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              usuarios_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_usuario_path(@usuario), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              usuario_path(@usuario),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
