<%- model_class = Solicitud -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cantidad) %>:</strong></dt>
  <dd><%= @solicitud.cantidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @solicitud.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dias_faltantes) %>:</strong></dt>
  <dd><%= @solicitud.dias_faltantes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_aprobacion) %>:</strong></dt>
  <dd><%= @solicitud.fecha_aprobacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_entrega_cliente) %>:</strong></dt>
  <dd><%= @solicitud.fecha_entrega_cliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_solicitud) %>:</strong></dt>
  <dd><%= @solicitud.fecha_solicitud %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor_id) %>:</strong></dt>
  <dd><%= @solicitud.instructor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:producto) %>:</strong></dt>
  <dd><%= @solicitud.producto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resolucion) %>:</strong></dt>
  <dd><%= @solicitud.resolucion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:saldo) %>:</strong></dt>
  <dd><%= @solicitud.saldo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total) %>:</strong></dt>
  <dd><%= @solicitud.total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unidades_entregadas) %>:</strong></dt>
  <dd><%= @solicitud.unidades_entregadas %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              solicitudes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_solicitud_path(@solicitud), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              solicitud_path(@solicitud),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
