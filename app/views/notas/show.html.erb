<%- model_class = Nota -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:items) %>:</strong></dt>
  <dd><%= @nota.items %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_documento_recibe) %>:</strong></dt>
  <dd><%= @nota.num_documento_recibe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unidad) %>:</strong></dt>
  <dd><%= @nota.unidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @nota.tipo %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              notas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_nota_path(@nota), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              nota_path(@nota),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
