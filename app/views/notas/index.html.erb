<%- model_class = Nota -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:items) %></th>
      <th><%= model_class.human_attribute_name(:num_documento_recibe) %></th>
      <th><%= model_class.human_attribute_name(:unidad) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @notas.each do |nota| %>
      <tr>
        <td><%= link_to nota.id, nota_path(nota) %></td>
        <td><%= nota.items %></td>
        <td><%= nota.num_documento_recibe %></td>
        <td><%= nota.unidad %></td>
        <td><%= nota.tipo %></td>
        <td><%=l nota.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_nota_path(nota), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      nota_path(nota),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_nota_path,
            :class => 'btn btn-primary' %>
