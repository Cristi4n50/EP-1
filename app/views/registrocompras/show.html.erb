<%- model_class = Registrocompra -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descripcion_producto) %>:</strong></dt>
  <dd><%= @registrocompra.descripcion_producto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_total) %>:</strong></dt>
  <dd><%= @registrocompra.valor_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_unidad) %>:</strong></dt>
  <dd><%= @registrocompra.valor_unidad %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              registrocompras_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registrocompra_path(@registrocompra), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              registrocompra_path(@registrocompra),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
