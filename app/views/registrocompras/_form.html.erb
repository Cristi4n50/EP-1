<%= simple_form_for @registrocompra, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :descripcion_producto %>
  <%= f.input :valor_total %>
  <%= f.input :valor_unidad %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                registrocompras_path, :class => 'btn' %>
  </div>
<% end %>
